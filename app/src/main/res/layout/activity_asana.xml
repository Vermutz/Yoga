<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AsanaActivity">

    <TextView
        android:id="@+id/NameMenuAsana"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Асаны"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/CreatyAsana"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/AsanaListNameInAsana"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="@drawable/botton"
        android:onClick="onBottomAsanaListClik"
        android:text="Список Асан"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CreatyAsana" />

    <Button
        android:id="@+id/CreatyAsana"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="@drawable/botton"
        android:onClick="onBottomCreatyAsanaClik"
        android:text="Создать Асану"
        app:layout_constraintBottom_toTopOf="@+id/AsanaListNameInAsana"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NameMenuAsana" />
</android.support.constraint.ConstraintLayout>