<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PracticeAudioPlayer">

    <SeekBar
        android:id="@+id/seekBarInPracticeAudioPlayer"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/ButtonPauseInPracticeAudioPlayer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ImageViewInPracticeAudioPlayer" />

    <Button
        android:id="@+id/ButtonPauseInPracticeAudioPlayer"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:background="@drawable/botton"
        android:onClick="onClickPause"
        android:text="Пауза"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ButtonPlayInPracticeAudioPlayer"
        app:layout_constraintTop_toBottomOf="@+id/seekBarInPracticeAudioPlayer" />

    <Button
        android:id="@+id/ButtonPlayInPracticeAudioPlayer"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:background="@drawable/botton"
        android:onClick="onClickPlay"
        android:text="Воспроизвести"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ButtonPauseInPracticeAudioPlayer"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBarInPracticeAudioPlayer" />

    <ImageView
        android:id="@+id/ImageViewInPracticeAudioPlayer"
        android:layout_width="368dp"
        android:layout_height="213dp"
        android:contentDescription="TODO"
        app:layout_constraintBottom_toTopOf="@+id/seekBarInPracticeAudioPlayer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AsanaNameInPracticeAudioPlayer"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/AsanaNameInPracticeAudioPlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/ImageViewInPracticeAudioPlayer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>